<section class="mb-2 nested-fields" style="position: relative">
  <div class="form-row" style="padding-right: 100px">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :measure_id, 'Nome' %>
        <%= f.select :measure_id,
                     options_from_collection_for_select(@measures, :id, :name, f.object.measure_id),
                     {include_blank: ''}, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <%= f.label :grams, 'Gramas' %>
      <%= f.number_field :grams, class: 'form-control' %>
    </div>
  </div>
  <%= link_to_remove_association "remover", f, class: 'btn btn-danger', style: 'position: absolute; right: 0; bottom: 0' %>
</section>