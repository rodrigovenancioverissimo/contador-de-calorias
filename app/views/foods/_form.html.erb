<%= form_for(food) do |f| %>
  <%= render 'shared/validates_errors', obj: food %>
  <div class="form-row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :grams %>
        <%= f.number_field :grams, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :calories, 'Calorias (kcal)' %>
        <%= f.number_field :calories, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :carbohydrates, 'Carboidratos (g)' %>
        <%= f.number_field :carbohydrates, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :proteins, 'Proteinas (g)' %>
        <%= f.number_field :proteins, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :total_fats, 'Gorduras totais (g)' %>
        <%= f.number_field :total_fats, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :satured_fats, 'Gorduras saturadas (g)' %>
        <%= f.number_field :satured_fats, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :dietary_fiber, 'Fibra alimentar (g)' %>
        <%= f.number_field :dietary_fiber, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :sodium_in_mg, 'SÃ³dio (mg)' %>
        <%= f.number_field :sodium_in_mg, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :user_id %>
        <%= f.select :user_id, options_from_collection_for_select(@users, :id, :email, f.object.user_id),
                     {include_blank: ''}, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div id="measures">
    <h4>Medidas</h4>
    <div id="measures_fields"
      <%= f.fields_for :food_measures do |task| %>
        <%= render 'foods/measures_fields', f: task %>
      <% end %>
    </div>
    <%= link_to_add_association f, :food_measures,
                                partial: 'foods/measures_fields',
                                form_name: 'f',
                                'data-association-insertion-node': '#measures_fields',
                                class: 'btn btn-primary mt-2 mb-3',
                                'data-association-insertion-method': 'append' do %>
      Mais medidias
    <% end %>
  </div>

  <div class="actions mb-3">
    <%= f.submit 'Salvar', class: 'btn btn-success' %>
  </div>
<% end %>
